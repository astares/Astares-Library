"A writer writes books"Class {	#name : #Writer,	#superclass : #Object,	#instVars : [		'name',		'book'	],	#category : #'Library-Core-Model-Base'}{ #category : #accessing }Writer >> name [	"Return the Name of the receiver."	^name ifNil: [ name := '' ]]{ #category : #accessing }Writer >> name: aString [	"Sets the Name of the receiver to the given String."	name := aString]{ #category : #accessing }Writer >> book [	"Returns the Book of the receiver."	^book]{ #category : #accessing }Writer >> book: aBook [	"Sets the Book of the receiver to the given Book"	book := aBook]