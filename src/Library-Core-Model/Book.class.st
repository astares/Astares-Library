"Books
"Class {	#name : #Book,	#superclass : #Publications,	#instVars : [		'category',		'authors'	],	#category : #'Library-Core-Model-Base'}{ #category : #accessing }Book >> category [	"Return the Category of the receiver."	^category ifNil: [ category := BookCategory thriller ]]{ #category : #accessing }Book >> category: aBookCategory [	"Sets the Category of the receiver to the given BookCategory."	category := aBookCategory]{ #category : #accessing }Book >> authors: aCollectionOfAuthors [	"Sets the Authors of the receiver to the given collection"	authors := aCollectionOfAuthors]{ #category : #accessing }Book >> authors [	"Return the Authors of the receiver."	^authors ifNil: [ authors := OrderedCollection new ]]